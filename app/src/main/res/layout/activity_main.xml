<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/btn1"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/btn2"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:hint="@string/btn3"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:hint="@string/btn4"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/btn5"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/btn6"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/btn7"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/btn8"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <Button
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/btn9"/>
            <Button
                android:id="@+id/btn2"
                android:layout_toRightOf="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/btn10"/>
            <Button
                android:id="@+id/btn3"
                android:layout_toRightOf="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/btn11"/>
            <Button
                android:id="@+id/btn4"
                android:layout_toRightOf="@+id/btn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/btn12"/>
    </RelativeLayout>
</LinearLayout>